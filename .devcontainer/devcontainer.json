{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        }
    },
    "postCreateCommand": "pip install --user -r requirements.txt",
    "customizations": {
        "vscode": {
            "extensions": [
                "bierner.github-markdown-preview",
                "ms-toolsai.jupyter",
                "ms-python.black-formatter"
            ]
        }
    }
}